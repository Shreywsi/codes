//36. Valid Sudoku
class Solution
{
public:
    bool isValidSudoku(vector<vector<char>>& board) {
         unordered_set<string> st;

         for(int i = 0; i < 9; i++)
         {
            for(int j = 0; j < 9; j++)
            {
                if(board[i][j] == '.')
                    continue;

                string row, col, box;

                row += board[i][j];
                row += "_ROW_" + to_string(i);

                col += board[i][j];
                col += "_COL_" + to_string(j);

                box += board[i][j];
                box += "_BOX_" + to_string(i/3) + "_" + to_string(j/3);

                if(st.count(row) || st.count(col) || st.count(box))
                    return false;

                st.insert(row);
                st.insert(col);
                st.insert(box);
            }
         }
         return true;
    }
};
